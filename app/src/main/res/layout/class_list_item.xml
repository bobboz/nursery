<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginBottom="3dp">

    <LinearLayout android:id="@+id/classDetails_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/classPicture_imgView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="64dp"
            android:layout_height="53dp"
            android:layout_marginTop="1dp"
            android:layout_margin="4dp"
            android:src="@drawable/baby"
            android:layout_gravity="center"
            app:civ_border_width="3dp"
            app:civ_border_color="#D3D3D3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/className_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"/>

            <TextView
                android:id="@+id/classDescription_textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@android:color/secondary_text_light_nodisable"
                android:layout_below="@+id/className_textView"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"/>



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>