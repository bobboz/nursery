<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profileimge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tech"
        android:id="@+id/child_picture"
        app:civ_border_color="#D3D3D3"
        app:civ_border_width="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center" />

    <TextView android:id="@+id/child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

    <TextView android:id="@+id/child_Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

    <TextView android:id="@+id/child_BDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

    <TextView android:id="@+id/child_FatherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

    <TextView android:id="@+id/child_MotherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

    <TextView android:id="@+id/child_Telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:gravity="left"/>

</LinearLayout>