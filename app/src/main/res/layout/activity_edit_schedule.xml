<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditScheduleActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/editSchedule_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            app:theme="@style/mainToolbarStyle"
            app:popupTheme="@style/mainMenuItemStyle"
            android:textAlignment="center" />

        <android.support.v7.widget.RecyclerView android:id="@+id/sessions_recyclerView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addSession_floatingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/color_lightBlue4"
            android:layout_gravity="end"/>

    </LinearLayout>


</ScrollView>